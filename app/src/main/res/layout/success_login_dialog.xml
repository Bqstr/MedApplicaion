<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/success_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@drawable/alert_shape"
        android:backgroundTint="@color/white"

        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:paddingHorizontal="24dp"

        >
        <Space
            android:layout_width="match_parent"
            android:layout_height="58dp"/>
        
        
        <FrameLayout

            android:layout_gravity="center_horizontal"
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/custom_alert_success_color"
            >
            <ImageView
                android:padding="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/done_24px"
                />


        </FrameLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <TextView
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yeay! Welcome Back"
            android:textSize="20sp"
            android:lineHeight="25dp"
            android:textFontWeight="700"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <TextView

            android:paddingHorizontal="20dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Once again you login successfully
into medidoc app"
            android:textSize="16sp"
            android:lineHeight="24dp"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

        <FrameLayout
            android:id="@+id/alert_success_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_button_shape"
            android:backgroundTint="@color/blue"
            android:paddingHorizontal="45dp"
            android:paddingVertical="16dp">

            <TextView
                android:textSize="16sp"
                android:lineHeight="24sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Go to home" />
        </FrameLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>