<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/success_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/alert_shape"
        android:backgroundTint="@color/white"

        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="434dp"
        android:paddingHorizontal="24dp"

        >
        <Space
            android:layout_width="match_parent"
            android:layout_height="58dp"/>


        <FrameLayout

            android:layout_gravity="center_horizontal"
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/custom_alert_success_color"
            >
            <ImageView

                android:padding="22dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/big_logout_icon"
                />


        </FrameLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <TextView
            android:fontFamily="@font/inter_bald"

            android:paddingHorizontal="32dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure to log out of your account?"
            android:textSize="20sp"
            android:lineHeight="25dp"
            android:textFontWeight="700"
            />




        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp"/>

        <FrameLayout
            android:id="@+id/logout_alert_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_button_shape"
            android:backgroundTint="@color/blue"
            android:paddingHorizontal="45dp"
            android:paddingVertical="16dp">

            <TextView
                android:fontFamily="@font/inter_semibald"

                android:textSize="16sp"
                android:lineHeight="24sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Go to home" />
        </FrameLayout>

        <TextView
            android:fontFamily="@font/inter_semibald"
            
            android:id="@+id/cancel_logout_alert"
            android:textSize="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="40dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:textColor="@color/blue"
            />





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>